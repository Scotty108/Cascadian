# CASCADIAN Environment Variables Template
# Copy this file to .env.local and fill in your values

# ==========================================
# Supabase Configuration
# ==========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==========================================
# Exchange API Keys (ENCRYPTED)
# ==========================================
# WARNING: Never commit actual API keys to version control
# These should be stored encrypted in the database per user

# Binance
# BINANCE_API_KEY=
# BINANCE_API_SECRET=

# Coinbase
# COINBASE_API_KEY=
# COINBASE_API_SECRET=

# ==========================================
# Price Feed APIs
# ==========================================
# CoinGecko (Free tier available)
COINGECKO_API_KEY=

# CoinMarketCap (Free tier available)
# COINMARKETCAP_API_KEY=

# ==========================================
# DeFi Protocol APIs
# ==========================================
# Alchemy (for Ethereum RPC)
ALCHEMY_API_KEY=

# Infura (alternative RPC)
# INFURA_PROJECT_ID=

# ==========================================
# Payment Processing
# ==========================================
# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==========================================
# AI/ML Services
# ==========================================
# OpenAI (for AI bot features)
OPENAI_API_KEY=

# ==========================================
# Monitoring & Analytics
# ==========================================
# Sentry (Error tracking)
# SENTRY_DSN=

# Vercel Analytics (auto-configured on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ==========================================
# Application Settings
# ==========================================
# Environment (development, staging, production)
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==========================================
# Security
# ==========================================
# Encryption key for API keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=

# ==========================================
# Feature Flags
# ==========================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_AI_BOT=false
NEXT_PUBLIC_ENABLE_MARKETPLACE=false
NEXT_PUBLIC_ENABLE_DEFI=false
